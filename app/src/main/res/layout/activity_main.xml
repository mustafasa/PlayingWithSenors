<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mustafa.accelormeterngyroscope.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="79dp" />

    <ToggleButton
        android:text="Start Acc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonAcc"
        android:textOff="Start Acc"
        android:textOn="Stop Acc"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ToggleButton
        android:text="Start Gyro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/buttonAcc"
        android:textOff="Start Gyro"
        android:textOn="Stop Gyro"
        android:id="@+id/buttonGro" />

    <ToggleButton
        android:text="Start Step"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOff="Start step"
        android:textOn="Stop step"
        android:layout_alignBottom="@+id/buttonGro"
        android:layout_toEndOf="@+id/buttonGro"
        android:id="@+id/buttonStep" />
</RelativeLayout>
